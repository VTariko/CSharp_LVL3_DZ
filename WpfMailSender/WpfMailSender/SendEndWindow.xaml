<Window x:Class="WpfMailSender.SendEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMailSender"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBackgroundBrush}"
        SizeToContent="Height"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        Title="SendEndWindow" MinHeight="175" Width="400" ResizeMode="NoResize">
    <Border BorderBrush="Black" BorderThickness="1">
    <Grid>
        
        <Label Name="lblSendEnd" Content="The End!" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36"/>
        <Button Name="btnOk" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,20" Width="100" Click="BtnOk_OnClick"/>
        
    </Grid>
    </Border>
</Window>
