<Window x:Class="WpfTestMailSender.SendEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBackgroundBrush}"
        SizeToContent="Height"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="SendEndWindow" MinHeight="100" Width="400" ResizeMode="CanMinimize">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBlock Name="tbSendEnd" Text="The End!" HorizontalAlignment="Center" VerticalAlignment="Center"
                       TextWrapping="Wrap" Foreground="{DynamicResource TextBrush}" />
            <Button Grid.Row="1" Name="btnOk" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="10"
                    Width="100" Click="BtnOk_OnClick" />
        </Grid>
    </Border>
</Window>
